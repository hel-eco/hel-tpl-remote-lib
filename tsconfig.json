{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2019",
    "outDir": "lib-js",
    "noEmit": false,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": []
}
